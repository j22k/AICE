<section class="vh-100 gradient-custom">
  <div class="container py-5 h-100">
    <div class="row justify-content-center align-items-center h-100">
      <div class="col-12 col-lg-9 col-xl-7">
        <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
          <div class="card-body p-4 p-md-5">
            <h3 class="mb-4 pb-2 pb-md-0 mb-md-5">Mark Attendance</h3>

            <form action="/Attendances" method="post">
              <div class="col-md-6 mb-4">

                <div class="form-outline">
                  <input type="month" id="firstName" class="form-control form-control-lg" name="year_of_batch"
                    value="{{year_joined}}" readonly />
                  <label class="form-label" for="firstName">Batch Year</label>
                </div>

              </div>

              <div class="col-md-6 mb-4">

                <div class="form-outline">
                  <input type="text" id="lastName" class="form-control form-control-lg" name="subject" />
                  <label class="form-label" for="lastName">Subject</label>
                </div>

              </div>
          </div>


          <div class="row">
            <div class="col-12">

              <select class="form-control form-control-lg" name="Hour">
                <option value="" disabled>Hour</option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
                <option value="6">6</option>
                <option value="7">7</option>
                <option value="1&2">1 and 2</option>
                <option value="2&4">2 and 4</option>
                <option value="5&6">5 and 6</option>
                <option value="6&7">6 and 7</option>
              </select>
              <label class="form-label select-label">Hour</label>

            </div>
          </div>
          <div class="col-md-6 mb-4">

            <div class="form-outline">


            </div>
          </div>

        </div>
      </div>
    </div>
  </div>
  </div>
</section>
<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Roll Number</th>
      {{!-- <th scope="col">Present</th> --}}
      <th scope="col">Absent</th>

    </tr>
  </thead>
  <tbody>
    {{#each BatchDetails}}
    <tr>
      <td><input type="text" value="{{this.fullname}}" readonly> </td>
      <td>{{this.roll_no}}</td>
      {{!-- <td>
 <input type="hidden" name="Id" value="{{this._id}}"> 
        <fieldset id="{{this.roll_no}}">
          <div class="custom-control custom-radio custom-control-inline">
            <input type="radio" id="{{this.roll_no}}" name="precent" class="" value="{{this._id}}">
          </div>
        </fieldset>
      </td> --}}
      <td>
        <fieldset id="{{this.roll_no}}">
          <div class="custom-control custom-radio custom-control-inline">
            <input type="radio" id="{{this.roll_no}}" name="Abcents[{{this.roll_no}}]" class="" value="false">

          </div>
        </fieldset>
      </td>
    </tr>
    {{/each}}
  </tbody>


</table>
<input type="submit" value="Submit">
</form>