<section class="h-100 bg-dark">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col">
                <div class="card card-registration my-4">
                    <div class="row g-0">
                        <div class="col-xl-6 d-none d-xl-block">
                            <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/img4.webp"
                                alt="Sample photo" class="img-fluid"
                                style="border-top-left-radius: .25rem; border-bottom-left-radius: .25rem;" />
                        </div>
                        <div class="col-xl-6">
                            <div class="card-body p-md-5 text-black">
                                <h3 class="mb-5 text-uppercase">Add Events</h3>
                                <form action="/add-events" method="post" enctype="multipart/form-data">
                                    <div class="form-outline mb-4">
                                        <input type="text" id="form3Example8" class="form-control form-control-lg" name="event_name" required/>
                                        <label class="form-label" for="form3Example8">Event Name</label>
                                    </div>

                                    <div class="form-outline mb-4">
                                        <input type="text" id="form3Example8" class="form-control form-control-lg" name="event_time" value="00:00am/pm - 00:00am/pm" required/>
                                        <label class="form-label" for="form3Example8">Event Time</label>
                                    </div>
                                    
                                    <div class="form-outline mb-4">
                                        <input type="text" id="form3Example8" class="form-control form-control-lg" name="event_venue"  required/>
                                        <label class="form-label" for="form3Example8">Event Venue</label>
                                    </div>

                                    <div class="form-outline mb-4">
                                        <input type="text" id="form3Example8" class="form-control form-control-lg" name="event_description"  required/>
                                        <label class="form-label" for="form3Example8">Event Description</label>
                                    </div>
                                    

                                    <div class="row">
                                        <div class="col-md-6 mb-4">
                                            <div class="form-outline">
                                                <input type="date" class="form-control form-control-lg"
                                                    placeholder="DOB" name="month" required>
                                                <label class="form-label" for="form3Example1m1">Date</label>
                                            </div>
                                        </div>

                                    <div class="form-outline mb-4">
                                        <input type="file" id="form3Example8" class="form-control form-control-lg" name="event_photo1"  required/>
                                        <label class="form-label" for="form3Example8">Photo 1</label>
                                    </div>
                                    
                                    <div class="form-outline mb-4">
                                        <input type="file" id="form3Example8" class="form-control form-control-lg" name="event_photo2"  required/>
                                        <label class="form-label" for="form3Example8">Photo 2</label>
                                    </div>
                                    


                                    <div class="d-flex justify-content-end pt-3">
                                        <button type="button" class="btn btn-light btn-lg">Reset all</button>
                                        <button type="submit" value="submit" class="btn btn-warning btn-lg ms-2">Submit form</button>
                                    </div>
                                     

                                    </div>
                                </form>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>